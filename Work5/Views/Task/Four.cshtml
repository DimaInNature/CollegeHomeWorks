
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <h3>
        Print the name of all available positions indicating the maximum and
        minimum salary
    </h3>
    <div class="container">
        <div class="table">
            <div class="table-header">
                <div class="header__item"><b id="Name" class="filter__link">Name</b></div>
                <div class="header__item"><b id="Surname" class="filter__link">Min</b></div>
                <div class="header__item"><b id="Patronymic" class="filter__link filter__link--number">Max</b></div>
            </div>
            <div class="table-content">
                @foreach (var i in ViewBag.Posts)
                {
                    <div class="table-row">
                        <div class="table-data">@i.Name</div>
                        <div class="table-data">@i.MinRate</div>
                        <div class="table-data">@i.MaxRate</div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>