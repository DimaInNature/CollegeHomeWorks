
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <p>Posts:</p>
    <div class="container">
        <div class="table">
            <div class="table-header">
                <div class="header__item"><b id="Status" class="filter__link filter__link--number">Post</b></div>
                <div class="header__item"><b id="EmployeFullName" class="filter__link filter__link--number">Salary</b></div>
                <div class="header__item"><b id="PostName" class="filter__link filter__link--number">DateOfEmployment</b></div>
            </div>
            <div class="table-content">
                @foreach (var i in ViewBag.Posts)
                {
                    <div class="table-row">
                        <div class="table-data">@i.Name</div>
                        <div class="table-data">@i.Salary</div>
                        <div class="table-data">@i.DateOfEmployment</div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>